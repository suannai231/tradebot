# Copy this file to `.env` and fill in your credentials

# Database connection (for connecting to Docker container from host)
DATABASE_URL=postgresql://postgres:password@localhost:5432/tradebot

# Redis connection (for connecting to Docker container from host)  
REDIS_URL=redis://localhost:6379

# Trading symbols configuration
# MODE options: "all", "popular", "large", "mid", "small", "custom"
SYMBOL_MODE=popular

# Custom symbols (used when SYMBOL_MODE=custom, comma-separated)
SYMBOLS=AAPL,MSFT,AMZN,GOOG,TSLA

# Symbol limits (to prevent overwhelming the system)
MAX_SYMBOLS=500
MAX_WEBSOCKET_SYMBOLS=100  # Alpaca free tier limit is 30

# Rate limiting configuration
BACKFILL_BATCH_SIZE=10
BACKFILL_CONCURRENT_REQUESTS=3
RATE_LIMIT_DELAY=0.5

# Market data configuration
TICK_INTERVAL=1.0
ENABLE_OHLCV=true

# Strategy configuration
STRATEGY_ENABLED=true
SMA_SHORT_WINDOW=5
SMA_LONG_WINDOW=20

# Logging configuration
LOG_LEVEL=INFO

# Alpaca API credentials (get from https://alpaca.markets)
ALPACA_KEY=your_alpaca_key_here
ALPACA_SECRET=your_alpaca_secret_here

# Polygon API key (optional, get from https://polygon.io)
POLYGON_API_KEY=your_polygon_key_here 