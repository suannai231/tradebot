# Trading Bot Configuration Defaults
# Copy this to .env and customize as needed

# ===== Database Connections =====
# Use Docker service names when running in Docker Compose
DATABASE_URL=postgresql://postgres:password@timescaledb:5432/tradebot
REDIS_URL=redis://redis:6379

# ===== Symbol Configuration =====
SYMBOL_MODE=custom
SYMBOLS=AAPL,MSFT,AMZN,GOOG,TSLA
MAX_SYMBOLS=500
MAX_WEBSOCKET_SYMBOLS=30

# ===== Performance Settings =====
BACKFILL_BATCH_SIZE=10
BACKFILL_CONCURRENT_REQUESTS=3
RATE_LIMIT_DELAY=0.5

# ===== Market Data Settings =====
TICK_INTERVAL=1.0
ENABLE_OHLCV=true

# ===== Strategy Settings =====
STRATEGY_ENABLED=true
SMA_SHORT_WINDOW=5
SMA_LONG_WINDOW=20

# ===== Logging =====
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s [%(levelname)s] %(name)s: %(message)s

# ===== API Credentials (Optional - for live data) =====
# Uncomment and fill in your API keys for live market data
# ALPACA_KEY=your_alpaca_key_here
# ALPACA_SECRET=your_alpaca_secret_here
# POLYGON_API_KEY=your_polygon_key_here 